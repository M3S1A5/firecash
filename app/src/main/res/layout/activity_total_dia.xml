<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/fecha_inicio_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de inicio (yyyy-mm-dd)" />

    <EditText
        android:id="@+id/fecha_fin_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de fin (yyyy-mm-dd)" />

    <Button
        android:id="@+id/boton_calcular_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular Total"
        android:background="@drawable/button_background" />

    <TextView
        android:id="@+id/resultado_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="18sp" />

</LinearLayout>
